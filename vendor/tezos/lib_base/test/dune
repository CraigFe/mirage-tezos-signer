(executables
 (names
   test_time
   test_p2p_addr
 )
 (libraries
   tezos-base
   data-encoding
   crowbar
 )
 (flags (:standard
          -open Tezos_base
        )))

(alias
 (name buildtest)
 (deps
   test_time.exe
   test_p2p_addr.exe
 ))

(alias
 (name runtest_time)
 (action (run %{exe:test_time.exe})))
(alias
 (name runtest_p2p_addr)
 (action (run %{exe:test_p2p_addr.exe})))

(alias
 (name runtest)
 (package tezos-base)
 (deps
   (alias runtest_time)
   (alias runtest_p2p_addr)
 ))
